<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:id="@+id/textView"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/holo_red_light"
        android:text="ConfiguraciÃ³n"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="60dp"
        android:text="GPS"
        android:textColor="#000"
        android:textStyle="italic"
        android:layout_marginLeft="85sp"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="121dp"
        android:text="Conectar con dispositivo"
        android:layout_marginLeft="10sp"
        android:textColor="#000"
        android:textStyle="italic"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conectar"
        android:textSize="10sp"
        android:id="@+id/botonble"
        android:layout_marginRight="10sp"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toEndOf="@+id/textView" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conectar"
        android:id="@+id/switch1"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignEnd="@+id/botonble" />

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listble"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/textView2" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ble"
        android:id="@+id/ble"
        android:textOn="@string/on"
        android:textOff="@string/off"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gps"
        android:id="@+id/gps"
        android:textOn="@string/on"
        android:textOff="@string/off"
        android:layout_below="@+id/ble"
        android:layout_alignEnd="@+id/ble" />


</RelativeLayout>